package web

templ NotFoundPage() {
	@Base() {
		<div class="text-center mt-10">
			<h2 class="text-3xl font-bold text-red-600 mb-4">404 - Paste Not Found</h2>
			<p class="text-gray-600 mb-6">Either the paste expired (after 5 minutes) or the link is invalid.</p>
			<a href="/" class="bg-orange-500 hover:bg-orange-600 text-white py-2 px-4 rounded">Go to Homepage</a>
		</div>
	}
}
